---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

const linkClasses = [
  "px-4",
  "px-2",
  "border-b-4",
  "border-b-transparent",
  "border-solid",
];
---

<header class="m-0 py-0 px-1 bg-white sticky top-0 shadow-md shadow-white">
  <nav class="flex items-center py-2">
    <h2 class="m-0">
      <a class:list={[linkClasses, "text-current hover:text-current"]} href="/"
        >{SITE_TITLE}</a
      >
    </h2>
    <div class="internal-links">
      <HeaderLink class:list={[linkClasses]} href="/">Home</HeaderLink>
      <HeaderLink class:list={[linkClasses]} href="/blog">Blog</HeaderLink>
    </div>
    <div class="social-links hidden md:flex grow justify-end">
      <a
        class:list={[linkClasses, "text-current hover:text-current"]}
        href="https://github.com/jdormit"
        target="_blank"
      >
        <span class="sr-only">Browse my GitHub</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
          ><path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path></svg
        >
      </a>
      <a
        class:list={[linkClasses, "text-current hover:text-current"]}
        href="https://linkedin.com/in/jeremydormitzer"
        target="_blank"
      >
        <span class="sr-only">Connect with me on LinkedIn</span>
        <svg
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
        >
          <path
            fill="currentColor"
            d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
          ></path></svg
        >
      </a>
      <a
        class:list={[linkClasses, "text-current hover:text-current"]}
        href="/rss.xml"
      >
        <span class="sr-only">Follow my RSS feed</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          width="32"
          height="32"
          stroke-width="1.5"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12.75 19.5v-.75a7.5 7.5 0 0 0-7.5-7.5H4.5m0-6.75h.75c7.87 0 14.25 6.38 14.25 14.25v.75M6 18.75a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
          ></path>
        </svg>
      </a>
    </div>
  </nav>
</header>
